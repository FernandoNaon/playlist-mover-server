# Spotify API
SPOTIPY_CLIENT_ID=your_spotify_client_id
SPOTIPY_CLIENT_SECRET=your_spotify_client_secret
SPOTIPY_REDIRECT_URI=http://127.0.0.1:5000/callback

# Flask
FLASK_SECRET_KEY=your_secret_key_here
FLASK_ENV=development

# Tidal API credentials (optional - uses built-in if not provided)
TIDAL_CLIENT_ID=
TIDAL_CLIENT_SECRET=

# Frontend URLs (update these for production)
FRONTEND_URL=http://localhost:5173
FRONTEND_REDIRECT=http://localhost:5173/callback

# Database
# Local Docker: postgresql://migrate_beats:localdevpassword@localhost:5432/migrate_beats
# Railway: automatically set when you add PostgreSQL addon
DATABASE_URL=postgresql://migrate_beats:localdevpassword@localhost:5432/migrate_beats

# Rate Limits (per day)
RATE_LIMIT_MIGRATIONS=50
RATE_LIMIT_FETCH_LIKED=100

# Cache TTL (hours)
CACHE_TTL_LIBRARY_STATS=6
CACHE_TTL_TOP_TRACKS=24
CACHE_TTL_PLAYLISTS=1
